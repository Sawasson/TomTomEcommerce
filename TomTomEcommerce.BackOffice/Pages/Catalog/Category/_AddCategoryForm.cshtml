@model TomTomEcommerce.BackOffice.Pages.Catalog.CategoryModel 

    <div class="modal fade" id="addcategoryviewid" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalCenterTitle">Add New Category</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="modal_form" method="post">
                    <div class="form-group" style="text-align:center">
                        <b>@Html.Label("Category Select")</b>
                        @Html.DropDownListFor(x => x.Category.ParentId, Model.Categories, "---Choose a category---", new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Category.Name, "", new { @style = "color:red" })
                    </div>
                    <div class="form-group">
                        <b>@Html.Label("Category Name")</b>
                        @Html.TextBoxFor(x => x.Category.Name, "", new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(x => x.Category.Name, "", new { @style = "color:red" })
                    </div>
                    <div class="form-group">
                        <b>@Html.Label("Category Description")</b>
                        @Html.TextBoxFor(x => x.Category.Description, "", new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(x => x.Category.Name, "", new { @style = "color:red" })
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" id="addcategorybuttonmodal" class="btn btn-primary">Add Category</button>
            </div>
        </div>
    </div>
</div>
